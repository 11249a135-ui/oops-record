#include <iostream>
using namespace std;

// Base class
class Person {
public:
    void showPerson() {
        cout << "I am a person." << endl;
    }
};

// Derived from Person (Multilevel part)
class Employee : public Person {
public:
    void showEmployee() {
        cout << "I am an employee." << endl;
    }
};

// Independent base class for Multiple Inheritance
class Trainer {
public:
    void showTrainer() {
        cout << "I am a trainer." << endl;
    }
};

// Hybrid: combines multilevel (Person -> Employee) + multiple (Employee + Trainer)
class Manager : public Employee, public Trainer {
public:
    void showManager() {
        cout << "I am a manager handling both work and training." << endl;
    }
};

int main() {
    Manager m;

    cout << "--- Hybrid Inheritance Demonstration ---" << endl;
    m.showPerson();    // From Person
    m.showEmployee();  // From Employee (multilevel)
    m.showTrainer();   // From Trainer (multiple)
    m.showManager();   // From Manager

    return 0;
}
