#include <iostream>
using namespace std;

// Base class
class Person {
protected:
    string name;
    int age;

public:
    Person(string n, int a) {
        name = n;
        age = a;
    }

    void displayPerson() {
        cout << "Name: " << name << endl;
        cout << "Age : " << age << endl;
    }
};

// Derived class (Single Inheritance)
class Student : public Person {
private:
    int roll;
    string course;

public:
    Student(string n, int a, int r, string c) : Person(n, a) {
        roll = r;
        course = c;
    }

    void displayStudent() {
        cout << "Roll Number: " << roll << endl;
        cout << "Course     : " << course << endl;
    }
};

int main() {
    Student s("Asha", 20, 101, "Computer Science");

    cout << "---- Student Details ----" << endl;
    s.displayPerson();   // Inherited method
    s.displayStudent();  // Child class method

    return 0;
}
